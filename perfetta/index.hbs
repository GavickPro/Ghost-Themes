{{!< default}}

{{! The main content area on the homepage }}
<main class="page-wrap" role="main">

    {{! Each post will be output using this markup }}
    {{#foreach posts}}

    <article class="{{post_class}}">
        <div>    
            <header class="post-header">
                {{content words="0"}}
                <h2 class="post-title">
                    <a href="{{url}}">{{{title}}}</a>
                </h2>
            </header>
            <section class="post-excerpt">
                <p>{{excerpt}}&hellip;</p>

                <a href="{{url}}" class="post-readmore">Read more</a>
            </section>
        </div>

        <aside class="post-meta">
            <time datetime="{{date format='YYYY-MM-DD'}}">
                {{date format="MMM DD"}}
                <span>{{date format="YYYY"}}</span>
            </time> 

            <dl>
                <dt class="item-author">by</dt>
                <dd>{{author}}</dd>
               
                {{#if tags}}
                <dt class="item-tags">tagged as:</dt>
                <dd>
                    <ul>
                      {{#foreach tags}}
                        <li itemprop="{{#if @first}}articleSection{{else}}keywords{{/if}}">{{name}}{{#if @last}} {{else}}, {{/if}}</li>
                      {{/foreach}}
                    </ul>
                </dd>
                {{/if}}
            </dl>
        </aside>
    </article>

    {{/foreach}}

    {{!! After all the posts, we have the previous/next pagination links }}
    {{pagination}}
</main>